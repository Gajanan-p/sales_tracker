<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layout_user_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:orientation="horizontal">

            <!--androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_row_edit"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="4dp"
                    android:text="Edit"
                    android:layout_margin="1dp"
                    android:background="@drawable/row_button_background"
                    android:textSize="16sp"
                    android:textColor="@android:color/black"/-->



            <TextView
                android:id="@+id/row_text_user_id"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="1"
                android:layout_margin="1dp"
                android:background="#ffffff"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/row_text_user_name"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="Gajanan"
                android:layout_margin="1dp"
                android:background="#ffffff"
                android:textSize="16sp"
                android:textColor="@android:color/black" />
            <TextView
                android:id="@+id/row_text_user_mobile_no"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="9503510446"
                android:layout_margin="1dp"
                android:background="#ffffff"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/row_button_user_delete"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center_horizontal"
                android:padding="8dp"
                android:text="delete"
                android:background="@drawable/row_button_background"
                android:layout_margin="1dp"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>