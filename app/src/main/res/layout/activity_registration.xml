<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".registration.RegistrationActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Registration info"
                android:textSize="18sp"
                />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_first_name"
                style="@style/InputStyle"
                android:hint="Enter First Name"
                android:inputType="text"
                />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_middle_name"
                style="@style/InputStyle"
                android:hint="Enter Middle Name"
                android:inputType="text"
                />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_last_name"
                style="@style/InputStyle"
                android:hint="Enter Last Name"
                android:inputType="text"
                />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_mobile_number"
                style="@style/InputStyle"
                android:hint="Enter Mobile Number"
                android:inputType="number"
                android:maxLength="10"
                />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_email_id"
                style="@style/InputStyle"
                android:hint="Enter Email Id"
                />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_dob"
                style="@style/InputStyle"
                android:clickable="false"
                tools:ignore="TouchTargetSizeCheck"
                android:focusableInTouchMode="false"
                android:hint="Select Date of birth"
                android:cursorVisible="false"
                android:drawableRight="@drawable/spinner_bg"
                android:focusable="false"
                />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_doj"
                style="@style/InputStyle"
                android:hint="Select date of joning"
                android:clickable="false"
                tools:ignore="TouchTargetSizeCheck"
                android:focusableInTouchMode="false"
                android:cursorVisible="false"
                android:drawableRight="@drawable/spinner_bg"
                android:focusable="false"
                />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_user_type"
                style="@style/InputStyle"
                android:clickable="false"
                tools:ignore="TouchTargetSizeCheck"
                android:focusableInTouchMode="false"
                android:hint="Select User Type"
                android:cursorVisible="false"
                android:drawableRight="@drawable/spinner_bg"
                android:focusable="false"
                />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_manager_right_id"
                android:clickable="false"
                style="@style/InputStyle"
                tools:ignore="TouchTargetSizeCheck"
                android:focusableInTouchMode="false"
                android:hint="Select Manager Id"
                android:cursorVisible="false"
                android:drawableRight="@drawable/spinner_bg"
                android:focusable="false"
                />
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_user_password"
                style="@style/InputStyle"
                android:hint="Enter Password"

                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_save_registration"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.core.widget.NestedScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>